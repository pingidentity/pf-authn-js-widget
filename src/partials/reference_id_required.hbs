<div class="card">
  <div class="org-logo">
    <img class="org-logo__image" src="{{logo}}" alt="Company Logo" />
  </div>
  <h1 class="heading">Application Sign On</h1>
  {{> errors}}
  {{> spinner}}
  <form class="form form--margin-small" id="AuthnWidgetForm">
    <div class="text-block">
      <div class="icon-feedback icon-feedback--error">
        <span class="icon-feedback__icon pingicon-ghost-error icon-feedback--error"></span>
      </div>
      <div class="text-block--overflow-wrap">
        <a href="https://github.com/pingidentity/pf-authn-js-widget/blob/master/docs/agentless.md" target="_blank">
          Complete Widget Agentless Integration</a>
      </div>
    </div>
    <div class="float-label">
      <input type="text" class="text-input float-label__input" id="username" name="username" placeholder="Username" disabled/>
      <label class="float-label__label" for="username">Username</label>
    </div>
    <div class="float-label">
      <input type="password" class="text-input float-label__input" id="password" name="password" placeholder="Password" disabled/>
      <label class="float-label__label" for="password">Password</label>
    </div>
    <button id="submit" data-agentlessActionid="checkReferenceId"
            class="button button--primary brand-primary-bg" disabled>
      Sign On
    </button>
  </form>
</div>