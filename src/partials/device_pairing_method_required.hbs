             data-id="flex-row">
          {{#ifEq devicePairingMethod.deviceType "MOBILE"}}
            <div class="tile-button__title">{{devicePairingMethod.applicationName}}</div>
          {{else ifEq devicePairingMethod.deviceType "TOTP"}}
            <div class="tile-button__title">Authenticator App</div>
          {{else ifEq devicePairingMethod.deviceType "SMS"}}
            <div class="tile-button__title">Text Message</div>
          {{else ifEq devicePairingMethod.deviceType "Email"}}
            <div class="tile-button__title">Email</div>
          {{else ifEq devicePairingMethod.deviceType "SECURITY_KEY"}}
            <div class="tile-button__title">Security Key</div>
          {{else ifEq devicePairingMethod.deviceType "PLATFORM"}}
            <div class="tile-button__title">Biometrics</div>
          {{else ifEq devicePairingMethod.deviceType "FIDO2"}}
            <div class="tile-button__title">PassKey</div>
          {{else ifEq devicePairingMethod.deviceType "Voice"}}
            <div class="tile-button__title">Voice Authentication</div>
          {{else ifEq devicePairingMethod.deviceType "WHATSAPP"}}
            <div class="tile-button__title">Whatsapp</div>
          {{else ifEq devicePairingMethod.deviceType "OATH_TOKEN"}}
            <div class="tile-button__title">Hardware Token</div>
          {{else}}
            <div class="tile-button__title">{{devicePairingMethod.deviceType}}</div>
          {{/ifEq}}
          {{#ifEq devicePairingMethod.deviceType "MOBILE"}}
            <div class="tile-button__content">Use PingOne to receive push notifications.</div>
          {{else ifEq devicePairingMethod.deviceType "TOTP"}}
            <div class="tile-button__content">Use an authenticator app (like Google) to authenticate.</div>
          {{else ifEq devicePairingMethod.deviceType "SMS"}}
            <div class="tile-button__content">Receive a text message with a passcode to authenticate.</div>
          {{else ifEq devicePairingMethod.deviceType "Email"}}
            <div class="tile-button__content">Receive an email with a passcode to authenticate.</div>
          {{else ifEq devicePairingMethod.deviceType "SECURITY_KEY"}}
            <div class="tile-button__content">Use a security key to authenticate.</div>
          {{else ifEq devicePairingMethod.deviceType "PLATFORM"}}
            <div class="tile-button__content">Use a fingerprint or facial scan to authenticate.</div>
          {{else ifEq devicePairingMethod.deviceType "FIDO2"}}
            <div class="tile-button__content">Use a passKey device to authenticate.</div>
          {{else ifEq devicePairingMethod.deviceType "Voice"}}
            <div class="tile-button__content">Receive a phone call with a passcode to authenticate.</div>
          {{else ifEq devicePairingMethod.deviceType "WHATSAPP"}}
            <div class="tile-button__content">Receive a WhatsApp message with a passcode to authenticate.</div>
          {{else ifEq devicePairingMethod.deviceType "OATH_TOKEN"}}
            <div class="tile-button__content">Use your hardware token to authenticate.</div>
          {{/ifEq}}
