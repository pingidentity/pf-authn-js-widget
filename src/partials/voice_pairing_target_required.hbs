<style>
  .phone-input-wrapper {
    display: flex;
    gap: 8px;
    align-items: flex-start;
  }

  .dropdown-container {
    position: relative;
    width: 30%;
  }

  .dropdown-list {
    display: none;
    position: absolute;
    max-height: 200px;
    overflow-y: auto;
    border: 1px solid #ddd;
    background-color: white;
    z-index: 1000;
    width: 100%;
  }

  .dropdown-item {
    padding: 8px;
    cursor: pointer;
    font-size: 15px;
  }

  .dropdown-item:hover {
    background: #2996cc;
    color: #fff;
  }

  .dropdown-input-container {
    position: relative;
    display: flex;
    align-items: center;
  }

  .dropdown-input-container {
    position: relative;
    display: flex;
    align-items: center;
  }

  .dropdown-arrow {
    font-family: iconfont;
    font-size: 13px;
    line-height: 13px;
    position: absolute;
    right: 8px;
    top: 18px;
    height: 16px;
    width: 16px;
    pointer-events: auto; /* Allow clicks */
    cursor: pointer;
  }

  .dropdown-input {
    width: 100%;
    padding: 16px 10px;
    border: 1px solid #8b9197;
    background-color: #fff !important;
  }

  .phone-input {
    background-color: #fff !important;
  }

  .expanded-dropdown {
    position: absolute;
    width: 100%;
    z-index: 1000;
  }
</style>
<div class="card">
  <div class="org-logo">
    <img class="org-logo__image" src="{{logo}}" alt="Company Logo"/>
  </div>
  {{> errors}}
  <h1 class="heading-text centered-text icon-heading">
    <svg viewBox="0 0 24 24" role="presentation">
      <path d="M20,15.5C18.8,15.5 17.5,15.3 16.4,14.9C16.3,14.9 16.2,14.9 16.1,14.9C15.8,14.9 15.6,15 15.4,15.2L13.2,17.4C10.4,15.9 8,13.6 6.6,10.8L8.8,8.6C9.1,8.3 9.2,7.9 9,7.6C8.7,6.5 8.5,5.2 8.5,4C8.5,3.5 8,3 7.5,3H4C3.5,3 3,3.5 3,4C3,13.4 10.6,21 20,21C20.5,21 21,20.5 21,20V16.5C21,16 20.5,15.5 20,15.5M5,5H6.5C6.6,5.9 6.8,6.8 7,7.6L5.8,8.8C5.4,7.6 5.1,6.3 5,5M19,19C17.7,18.9 16.4,18.6 15.2,18.2L16.4,17C17.2,17.2 18.1,17.4 19,17.4V19Z"/>
    </svg><span class="inline-icon">Voice</span></h1>
  <div class="text-block">
    <div class="text-block--overflow-wrap">Enter the phone number you would like to receive authentication codes
      with.
    </div>
  </div>
  <div class="tile-selector tile-selector--stacked">
    <form class="form" id="AuthnWidgetForm">
      <div class="stack stack--small" data-id="stack">
        <div class="phone-input-wrapper">
          <div class="dropdown-container">
            <div class="dropdown-input-container">
              <input type="text" id="countryCodeInput" name="countryCodeInput" class="dropdown-input" value="+1"
                     readonly placeholder="Select country">
              <div id="dropdownArrow" class="dropdown-arrow">v</div>
            </div>
            <div id="dropdownList" class="dropdown-list expanded-dropdown">
            </div>
          </div>
          <div class="text-input__icon">
            <input id="phone" type="tel" name="phone" class="text-input text-input required" value=""/>
          </div>
        </div>
      </div>
      <div class="text-block" data-id="textblock">
        <div class="text-block--overflow-wrap">
          <div class="stack" data-id="stack">
            <div>
              <button id="submit" data-actionId="submitVoiceTarget" type="submit"
                      class="button button--primary brand-primary-bg">
                Next
              </button>
            </div>
            <a tabindex="0" data-actionId="cancelDevicePairing" target="_self" class="anchor">Cancel</a>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
